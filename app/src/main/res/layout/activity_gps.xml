<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hansyuan.cruzrojamobile.GPS">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/broadcast"
        android:layout_marginTop="13dp"
        android:text="Longitude:\n\nLatitude:\n\nLast Recorded Time: \n\nLast Transmitted Time:\n\n"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Current Status:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/statusupdate"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="Clocking:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clockSwitch"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Widget.Switch"
        android:checked="false"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/statusupdate"
        android:layout_alignLeft="@+id/broadcastCruz"
        android:layout_alignStart="@+id/broadcastCruz" />

    <Button
        android:text="send info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/broadcastCruz"
        android:onClick="broadcastCruzRoja"
        android:layout_below="@+id/locationListener"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Listening "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationListener"
        android:layout_below="@+id/clockSwitch"
        android:layout_alignRight="@+id/broadcastCruz"
        android:layout_alignEnd="@+id/broadcastCruz" />

</RelativeLayout>
