<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Request"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/addressText"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/header"
        android:layout_marginLeft="10dp"
        android:text="Address"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressText"
        android:paddingTop="3dp"
        android:layout_marginLeft="10dp"
        android:text="BahÃ­a Kino 43 Infonavit Lomas del Porvenir, \n22531 Tijuana, B.C., Mexico"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/DescriptionText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/address"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Description"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Next to Agua Caliente Fountain"
        android:textSize="30dp"
        android:layout_below="@+id/DescriptionText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/gmap"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/description"
        android:layout_marginTop="49dp"
        android:layout_toLeftOf="@+id/header"
        android:layout_toStartOf="@+id/header"
        android:adjustViewBounds="true"
        android:background="@drawable/button_states"
        android:padding="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/navigation_img" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/gmap"
        android:layout_toEndOf="@+id/header"
        android:layout_toRightOf="@+id/header"
        android:textSize="22dp"
        android:background="@drawable/button_states"
        android:text="Clear" />

</RelativeLayout>

